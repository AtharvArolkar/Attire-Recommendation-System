<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    tools:context=".Fragments.FetchOutfitInputDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="casual"
                    android:text="What is the event?"
                    android:textAlignment="center"
                    android:textColor="#040404"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerEvent"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="casual"
                    android:text="Where is the event?"
                    android:textAlignment="center"
                    android:textColor="#040404"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/editTextTextPersonName"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"

                        android:layout_weight="2"
                        android:background="@drawable/shape"
                        android:ems="10"
                        android:hint="Select Location"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textColorHint="#7C7B7B" />

                    <Button
                        android:id="@+id/getLocationButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:drawableEnd="@drawable/location"
                        android:text="  "
                        android:textAlignment="center"
                        app:cornerRadius="20dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="casual"
                    android:text="When is the event?"
                    android:textAlignment="center"
                    android:textColor="#040404"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/editTextDate"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape"
                    android:hint="Select Date"
                    android:textAlignment="center"
                    android:inputType="date"
                    android:textColor="#000000"
                    android:textColorHint="#7C7B7B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="casual"
                    android:text="What time is the event?"
                    android:textAlignment="center"
                    android:textColor="#040404"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/timePick"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="Select Time"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="11dp" />


            </LinearLayout>

            <Button
                android:id="@+id/generateOutfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Generate Outfit"
                android:textColor="#FBFBFB" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>